<html>
<head>
<META HTTP-EQUIV="refresh" CONTENT="50;URL=successes.html">
<%= stylesheet_link_tag "challenges.css" %> 
<script>
function scroll(speed) {
    $('html, body').animate({ scrollTop: $(document).height() - $(window).height() }, speed, function() {
        $(this).animate({ scrollTop: 0 }, speed);
    });
}
</script>

</head>
<body>
<table border="1" width ="100%" bgcolor=#A9E2F3 >
  <tr>
    <th width="15%">Owner</th>
    <th width="85%">Challenge</th>
  </tr>
 
<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.text %></td>
  </tr>
<% end %>
</table>
<script>
speed = 5000;
scroll(speed)
setInterval(function(){scroll(speed)}, speed * 2);
</script>
</body>
</html>
